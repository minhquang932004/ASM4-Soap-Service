@model ServiceReference1.PromotionsQuangNm

@{
    ViewData["Title"] = "Create Promotion";
}

<h2>Create Promotion</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="PromotionQuangNmid" class="form-label">Id</label>
        <input asp-for="PromotionQuangNmid" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DiscountRate" class="form-label">Discount Rate</label>
        <input asp-for="DiscountRate" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date (YYYY/MM/DD)</label>
        <input asp-for="StartDate" class="form-control" type="date" pattern="\d{4}/\d{2}/\d{2}" />
    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date (YYYY/MM/DD)</label>
        <input asp-for="EndDate" class="form-control" type="date" pattern="\d{4}/\d{2}/\d{2}" />
    </div>
    <div class="mb-3">
        <label asp-for="IsActive" class="form-label">Is Active</label>
        <select asp-for="IsActive" class="form-select">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="ApplicableModel" class="form-label">Applicable Model</label>
        <input asp-for="ApplicableModel" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="MaxUsage" class="form-label">Max Usage</label>
        <input asp-for="MaxUsage" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="UsageQuangNmid" class="form-label">Usage Id</label>
        <select asp-for="UsageQuangNmid" class="form-select" asp-items="ViewBag.UsageQuangNmidList">
            <option value="">-- Select Usage --</option>
        </select>
    </div>
    <!-- CreatedAt is auto-set in controller, so no input field -->
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>