@model ServiceReference1.PromotionsQuangNm

@{
    ViewData["Title"] = "Edit Promotion";
}

<h2>Edit Promotion</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="PromotionQuangNmid"></label>
        <input asp-for="PromotionQuangNmid" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountRate"></label>
        <input asp-for="DiscountRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsActive" class="form-label">Is Active</label>
        <select asp-for="IsActive" class="form-select">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ApplicableModel"></label>
        <input asp-for="ApplicableModel" class="form-control" />
        <span asp-validation-for="ApplicableModel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxUsage"></label>
        <input asp-for="MaxUsage" class="form-control" type="number" />
        <span asp-validation-for="MaxUsage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsageQuangNmid"></label>
        <input asp-for="UsageQuangNmid" class="form-control" type="number" />
        <span asp-validation-for="UsageQuangNmid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAt"></label>
        <input asp-for="CreatedAt" class="form-control" type="datetime" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    <script>
        document.getElementById('editForm').addEventListener('submit', function (e) {
            // Convert StartDate to ISO 8601 string if not empty
            var startInput = document.getElementById('StartDate');
            if (startInput && startInput.value) {
                var startDate = new Date(startInput.value);
                startInput.value = startDate.toISOString();
            }
            // Convert EndDate to ISO 8601 string if not empty
            var endInput = document.getElementById('EndDate');
            if (endInput && endInput.value) {
                var endDate = new Date(endInput.value);
                endInput.value = endDate.toISOString();
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}